<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/mediaRecorder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MediaRecorder录音"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/audioRecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="audioRecord录音"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mediaRecorder" />
    <Button
        android:id="@+id/btStopRecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="停止录音"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/audioRecord"  />
    <Button
        android:id="@+id/btPlayRecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="播放录音"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btStopRecord" />

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btPlayRecord"
        android:id="@+id/time"
        android:text="text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:format24Hour="yyyy-MM-dd aa hh:mm"
        android:textColor="#2D3033"
        android:textSize="26sp" />
</androidx.constraintlayout.widget.ConstraintLayout>